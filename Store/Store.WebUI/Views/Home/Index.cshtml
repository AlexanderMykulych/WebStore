@model Store.WebUI.Models.ViewModelIndex
@{
    ViewBag.Title = "Home page";
    
}

<div>
    @{
        Html.RenderAction("Items", "Product", new { category = Model.pageInfo.CurrentCategory,
                                                    start = (Model.pageInfo.CurrentPage-1) * Model.pageInfo.ItemsInPage,
                                                    count = Model.pageInfo.ItemsInPage});
     }
    @for(int i = 1;  i <= Model.pageInfo.TotalPage; i++)
    {
        <div class="pager">
            @Html.ActionLink(i.ToString(), "Index", "Home",
                                new { categories = Model.pageInfo.CurrentCategory, pageId = i }, null)
        </div>
    }
</div>
    

