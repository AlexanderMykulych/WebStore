@model IEnumerable<string>

@{
    string curClass = null;
}


@if(ViewBag.SelectedCategory == "All")
{
    curClass = "tab selected";
    
}
else
{
    curClass = "tab";
}
    @Html.ActionLink("All", "Index", "Home", null, new { @class = curClass})

@foreach(var item in Model)
{
    if (ViewBag.SelectedCategory == item)
    {
        curClass = "tab selected";

    }
    else
    {
        curClass = "tab";
    }
    @Html.ActionLink(item, "Index", "Home", new { categories = item }, new { @class = curClass });
}